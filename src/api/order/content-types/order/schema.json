{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "customerEmail": {
      "type": "string"
    },
    "customerName": {
      "type": "string"
    },
    "cart": {
      "type": "json"
    },
    "totalCost": {
      "type": "decimal"
    },
    "transactionStatus": {
      "type": "enumeration",
      "enum": [
        "pending",
        "paid",
        "shipped"
      ]
    },
    "address": {
      "type": "text"
    },
    "paymentId": {
      "type": "string"
    },
    "paymentMethod": {
      "type": "enumeration",
      "enum": [
        "Card",
        "Paypal",
        "Cash on Delivery"
      ]
    }
  }
}
